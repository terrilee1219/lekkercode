{{page-title 'User'}}
  <div class="container has-text-centered">
    <div class="column is-3 is-offset-4">
      <LinkTo @route="users">
        <button class="button mb-2" type="button">
          Back to users
        </button>
      </LinkTo>
      <div class="user-profile">
        <figure class="avatar">
          <img src={{@model.image}} width="256px" alt="User" />
        </figure>
        <p class="title has-text-white my-2">
          {{@model.name}}
        </p>
        <p class="subtitle has-text-white my-2">
          Example Value:
          {{@model.value}}
        </p>

        <p class="subtitle has-text-white my-2">
          Archived:
          {{@model.archived}}
        </p>

        <button
          type="button"
          class="button is-pulled-left mt-4"
          {{on "click" this.modifyValue}}
        >
          Change Value
        </button>

        <button
          type="button"
          class="button is-pulled-left mt-4"
          {{on "click" this.modifyValue}}
        >
          Archive user
        </button>


      </div>
    </div>
  </div>
{{outlet}}